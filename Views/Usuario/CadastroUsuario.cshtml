@model dotnet.Models.Usuario

@{
    ViewData["Title"] = "Página de cadastro";
}


<h2>Página de Cadastro</h2>

<form asp-action="CadastroUsuario">
  <div class="mb-3 row">
    <label asp-for="Login" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input type="text" asp-for="Login"  class="form-control"/>
    </div>
  </div>
  <div class="mb-3 row">
    <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label asp-for="Senha" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input type="password" class="form-control" asp-for="Senha"/>
      <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
  </div>
    <div>
        <button type="submit" class="btn btn-primary mb-2">Salvar</button>
    </div>
</form>